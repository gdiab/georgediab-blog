---
export interface Props {
  variant?: "default" | "compact";
}

const { variant = "default" } = Astro.props;
---

<div
  class={variant === 'default' ? 'newsletter-box bg-gray-50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded-lg p-6 my-8' : 'newsletter-compact mt-6'}
  data-placeholder="future-offer"
  hidden
>
  {variant === 'default' && (
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
      Placeholder: future offer or updates will go here.
    </p>
  )}

  <div class="flex flex-col sm:flex-row gap-3 text-sm text-gray-600 dark:text-gray-400">
    <a
      href="#"
      class="px-4 py-2 border border-dashed border-gray-300 dark:border-gray-600 rounded-md text-center hover:border-accent"
    >
      Primary CTA (future)
    </a>
    <a
      href="#"
      class="px-4 py-2 border border-dashed border-gray-300 dark:border-gray-600 rounded-md text-center hover:border-accent"
    >
      Secondary CTA (future)
    </a>
  </div>
</div>

<style>
  @media (max-width: 640px) {
    .newsletter-box {
      margin-left: -1rem;
      margin-right: -1rem;
      border-radius: 0;
    }
  }
</style>
